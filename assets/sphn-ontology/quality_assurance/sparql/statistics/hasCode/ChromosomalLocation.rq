PREFIX sphn:<https://biomedit.ch/rdf/sphn-schema/sphn#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT *
WHERE {
    {
    SELECT ?origin ?code ?code_identifier ?code_name ?code_codingSystemAndVersion (COUNT(?code) as ?count_instances)
    WHERE {
        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#ChromosomalLocation> .

        BIND("sphn:hasChromosome/sphn:hasCode" as ?origin)
        optional{ ?resource sphn:hasChromosome/sphn:hasCode ?code . }
        optional{ ?resource sphn:hasChromosome/sphn:hasCode/sphn:hasIdentifier ?code_identifier . }
        optional{ ?resource sphn:hasChromosome/sphn:hasCode/sphn:hasName ?code_name . }
        optional{ ?resource sphn:hasChromosome/sphn:hasCode/sphn:hasCodingSystemAndVersion ?code_codingSystemAndVersion . }

    }
    GROUP BY ?origin ?code ?code_identifier ?code_name ?code_codingSystemAndVersion
    }
        UNION
    {
    SELECT ?origin ?code ?code_identifier ?code_name ?code_codingSystemAndVersion (COUNT(?code) as ?count_instances)
    WHERE {
        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#ChromosomalLocation> .

        BIND("sphn:hasEndCytobandCode" as ?origin)
        optional{ ?resource sphn:hasEndCytobandCode ?code . }
        optional{ ?resource sphn:hasEndCytobandCode/sphn:hasIdentifier ?code_identifier . }
        optional{ ?resource sphn:hasEndCytobandCode/sphn:hasName ?code_name . }
        optional{ ?resource sphn:hasEndCytobandCode/sphn:hasCodingSystemAndVersion ?code_codingSystemAndVersion . }

    }
    GROUP BY ?origin ?code ?code_identifier ?code_name ?code_codingSystemAndVersion
    }
        UNION
    {
    SELECT ?origin ?code ?code_identifier ?code_name ?code_codingSystemAndVersion (COUNT(?code) as ?count_instances)
    WHERE {
        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#ChromosomalLocation> .

        BIND("sphn:hasStartCytobandCode" as ?origin)
        optional{ ?resource sphn:hasStartCytobandCode ?code . }
        optional{ ?resource sphn:hasStartCytobandCode/sphn:hasIdentifier ?code_identifier . }
        optional{ ?resource sphn:hasStartCytobandCode/sphn:hasName ?code_name . }
        optional{ ?resource sphn:hasStartCytobandCode/sphn:hasCodingSystemAndVersion ?code_codingSystemAndVersion . }

    }
    GROUP BY ?origin ?code ?code_identifier ?code_name ?code_codingSystemAndVersion
    }

}