PREFIX sphn:<https://biomedit.ch/rdf/sphn-schema/sphn#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT *
WHERE {
    {
    SELECT ?origin (MIN(?value) as ?min) (MAX(?value) as ?max)
    WHERE {
        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#Allergy> .

        BIND("sphn:hasFirstRecordDateTime" as ?origin)
        optional{ ?resource sphn:hasFirstRecordDateTime ?value . }

    }
    GROUP BY ?origin
    }
        UNION
    {
    SELECT ?origin (MIN(?value) as ?min) (MAX(?value) as ?max)
    WHERE {
        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#Allergy> .

        BIND("sphn:hasLastReactionDateTime" as ?origin)
        optional{ ?resource sphn:hasLastReactionDateTime ?value . }

    }
    GROUP BY ?origin
    }

}