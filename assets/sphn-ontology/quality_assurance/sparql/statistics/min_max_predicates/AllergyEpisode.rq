        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#AllergyEpisode> .

        BIND("sphn:hasExposure/sphn:hasEndDateTime" as ?origin)
        optional{ ?resource sphn:hasExposure/sphn:hasEndDateTime ?value . }

    }
    GROUP BY ?origin
    }
        UNION
    {
    SELECT ?origin (MIN(?value) as ?min) (MAX(?value) as ?max)
    WHERE {
        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#AllergyEpisode> .

        BIND("sphn:hasExposure/sphn:hasDuration/sphn:hasValue" as ?origin)
        optional{ ?resource sphn:hasExposure/sphn:hasDuration/sphn:hasValue ?value . }

    }
    GROUP BY ?origin
    }
        UNION
    {
    SELECT ?origin (MIN(?value) as ?min) (MAX(?value) as ?max)
    WHERE {
        ?resource a <https://biomedit.ch/rdf/sphn-schema/sphn#AllergyEpisode> .

        BIND("sphn:hasAdministrativeCase/sphn:hasAdmissionDateTime" as ?origin)
        optional{ ?resource sphn:hasAdministrativeCase/sphn:hasAdmissionDateTime ?value . }

    }
    GROUP BY ?origin
